{
  "manifest_version": 2,
  "name": "Bitcoin to Tulips",
  "version": "0.1",
  "icons": { "16": "icon.png",
           "48": "icon-48.png",
          "128": "icon-128.png" },  
  "description": "Replaces all references to Bitcoin on Twitter with Tulip emojis.",

  "permissions": ["https://twitter.com/*"],

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["replaceWord.js"]
    }
  ]
}
